  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const modoHacker = document.getElementById('modo_hacker');
      const corPrincipal = document.getElementById('cor_principal');
      const hexCorPrincipal = document.getElementById('hex_cor_principal');
      const corBotaoVoltar = document.getElementById('cor_botao_voltar');
      const corVoltarTopo = document.getElementById('cor_voltar_topo');
      const hexCorVoltarTopo = document.getElementById('hex_cor_voltar_topo');
      const mostrarVoltarTopo = document.getElementById('mostrar_voltar_topo');
      const camposDesativados = document.querySelectorAll('.disabled-field');

      function atualizarCampos() {
        const modo = modoHacker.value;

        if (modo === '1') {
          corPrincipal.value = '#000000';
          hexCorPrincipal.value = '#000000';
          corPrincipal.disabled = hexCorPrincipal.disabled = true;
        } else if (modo === '0') {
          corPrincipal.value = '#ffffff';
          hexCorPrincipal.value = '#ffffff';
          corPrincipal.disabled = hexCorPrincipal.disabled = true;
          corBotaoVoltar.disabled = corVoltarTopo.disabled = hexCorVoltarTopo.disabled = false;
        } else {
          corPrincipal.disabled = hexCorPrincipal.disabled = false;
          corBotaoVoltar.disabled = corVoltarTopo.disabled = hexCorVoltarTopo.disabled = false;
        }

        corBotaoVoltar.style.display = mostrarVoltarTopo.value === '1' ? 'block' : 'none';
      }

      // Atualizando campos ao clicar
      corPrincipal.addEventListener('input', () => hexCorPrincipal.value = corPrincipal.value);
      hexCorPrincipal.addEventListener('input', () => corPrincipal.value = hexCorPrincipal.value);
      corVoltarTopo.addEventListener('input', () => hexCorVoltarTopo.value = corVoltarTopo.value);
      hexCorVoltarTopo.addEventListener('input', () => corVoltarTopo.value = hexCorVoltarTopo.value);
      mostrarVoltarTopo.addEventListener('change', atualizarCampos);

      // Inicializar
      atualizarCampos();
    });
  </script>
