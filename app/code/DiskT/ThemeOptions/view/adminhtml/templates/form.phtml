<script>
    document.addEventListener('DOMContentLoaded', function () {
        const modoHacker = document.getElementById('modo_hacker');
        const corPrincipal = document.getElementById('cor_principal');
        const hexCorPrincipal = document.getElementById('hex_cor_principal');
        const fonteSite = document.getElementById('fonte_site');
        const mostrarVoltarTopo = document.getElementById('mostrar_voltar_topo');
        const corBotaoVoltar = document.getElementById('cor_botao_voltar');
        const corVoltarTopo = document.getElementById('cor_voltar_topo');
        const hexCorVoltarTopo = document.getElementById('hex_cor_voltar_topo');

        function atualizarCampos() {
            const valorModoHacker = modoHacker.value;

            if (valorModoHacker === '1') {
                corPrincipal.value = '#000000';
                corPrincipal.disabled = true;
                hexCorPrincipal.disabled = true;
                hexCorPrincipal.value = '#000000';
                fonteSite.value = "'Courier New', monospace";
                corVoltarTopo.disabled = true;
                corVoltarTopo.value = '#000000';
                hexCorVoltarTopo.disabled = true;
                hexCorVoltarTopo.value = '#000000';
            } else if (valorModoHacker === '0') {
                corPrincipal.value = '#ffffff';
                corPrincipal.disabled = true;
                hexCorPrincipal.disabled = true;
                hexCorPrincipal.value = '#ffffff';
                fonteSite.value = 'Arial';
                corVoltarTopo.disabled = false;
                corVoltarTopo.value = '#0000ff';
                hexCorVoltarTopo.disabled = false;
                hexCorVoltarTopo.value = '#0000ff';
            } else {
                corPrincipal.disabled = false;
                hexCorPrincipal.disabled = false;
                fonteSite.value = 'Arial';
                corVoltarTopo.disabled = false;
                hexCorVoltarTopo.disabled = false;
            }

            if (mostrarVoltarTopo.value === '1') {
                corBotaoVoltar.style.display = 'block';
            } else {
                corBotaoVoltar.style.display = 'none';
            }
        }

        hexCorPrincipal.addEventListener('input', function () {
            corPrincipal.value = hexCorPrincipal.value;
        });

        corPrincipal.addEventListener('input', function () {
            hexCorPrincipal.value = corPrincipal.value;
        });

        hexCorVoltarTopo.addEventListener('input', function () {
            corVoltarTopo.value = hexCorVoltarTopo.value;
        });

        corVoltarTopo.addEventListener('input', function () {
            hexCorVoltarTopo.value = corVoltarTopo.value;
        });

        modoHacker.addEventListener('change', atualizarCampos);
        mostrarVoltarTopo.addEventListener('change', function () {
            if (mostrarVoltarTopo.value === '1') {
                corBotaoVoltar.style.display = 'block';
            } else {
                corBotaoVoltar.style.display = 'none';
            }
        });

        atualizarCampos();
    });
</script>
